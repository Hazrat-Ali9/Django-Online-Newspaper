# Django Online Newspaper Environment Variables
# Copy this file to .env and update the values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite is default, uncomment below for PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/newspaper_db

# Email Settings (for production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=True

# Media and Static Files
MEDIA_URL=/media/
STATIC_URL=/static/